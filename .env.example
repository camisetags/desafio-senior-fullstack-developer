# PostgreSQL (para uso com Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=servicosdb

# Quando executando com Docker, usar PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@db:5432/servicosdb

# Backend
PROJECT_NAME=Plataforma de Solicitação de Serviços Municipais
API_PREFIX=/api
ENVIRONMENT=development

# Frontend config
BACKEND_URL=http://backend:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://frontend:3000

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://frontend:3000", "*"]

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_ENABLED=True
REDIS_CACHE_EXPIRE=300

# MinIO Configuration
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=solicitacoes
MINIO_PUBLIC_ENDPOINT=http://localhost:9000
